{% extends 'base.html.twig' %}

{% block title %}Recipes
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-4xl font-bold text-center">Recipes</h1>
		{% for recipe in recipes %}
			<div>
				<a href="{{path('recipe_show', {id:recipe.id}) }}">
					<h2>{{ recipe.name }}</h2>
				</a>
			</div>
		{% endfor %}


	{% endblock %}
